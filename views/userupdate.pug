extends ./com.pug  
block content

    .row.justify-content-md-center
        .col-md-6
            h1 UPDATE PROFILE 
            if errors
                each error in errors
                    .alert.alert-danger= error

            form(action="/user/" + data.id + "/update", method="POST", enctype="multipart/form-data")
                .form-group
                    label(for="name") User Name
                    input#name.form-control(type="text", name="name",  value= data.name)


                .form-group
                    label(for="age") age
                    input#age.form-control(type="text", name="age",  value= data.age)

                .form-group
                    label(for="email") age
                    input#email.form-control(type="text", name="email",  value= data.email)    	
                .form-group
                    label(for="password") Password
                    input#password.form-control(type="text", name="password", value= data.password)

                .form-group
                    label(for="avatar") Avatar
                    input#avatar.form-control-file(type="file", name="avatar", value= data.avatar)
                .form-group     
                    lable role
                    select.form-control(name="isAdmin")
                        option(value="false", check="" ) User
                        option(value="true" ) Admin
                    button(type="submit") Cập nhật tài khoản